{% for card in cards %}
	<div class="row" id="{{ card.id }}">
		<div class="card">
			<a href="pages/home-{{ card.id }}.php">
				<div class="card-img-full" style="background-image: url({{ card.slides[0] }});"></div>
			</a>
		</div>
		<div class="card">
			<a href="pages/home-{{ card.id }}.php">
				<div class="card-img-top" style="background-image: url({{ card.bannerImg }});"></div>
				<div class="card-content">
					<h2>
						<span class="card-subtitle">{{ card.subTitle1 }}</span>
						<span class="card-title">{{ card.title }}</span>
						<span class="card-subtitle">{{ card.subTitle2 }}</span>
					</h2>
					<p class="card-text">{{ card.description }}</p>
				</div>
			</a>
		</div>
	</div>
{% endfor %}
